<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Reserve Vaccine: <%= @vaccine.name %></h1>

      <%= simple_form_for [ @vaccine, @reservation ] do |f| %>
        <%= f.input :date, as: :string, input_html: {type: :date}, label: 'Your reservation date:' %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
